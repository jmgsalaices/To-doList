
    <Window x:Class="To_doList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_doList"
        mc:Ignorable="d"
        Title="MainWindow" Height="832" Width="1280"
        MinWidth="1150" MinHeight="450"
        WindowStartupLocation="CenterScreen" >
    <Grid Margin="0,15,0,-15">  
        
    <Window.Resources>
        <Storyboard x:Key="SlideOnLoad">
            <DoubleAnimation     Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0" Duration="0:0:1" >
                
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                     From="0,100,0,0" To="0,0,0,0" Duration="0:0:1" >
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </ThicknessAnimation.EasingFunction>

            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>
    <Grid Opacity="1" Margin="0">  
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard Storyboard="{StaticResource SlideOnLoad}" />   
            </EventTrigger> 
        </Grid.Triggers>
      
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="435" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <!--Nav panel-->
        <Rectangle Fill="{StaticResource AccentDark}" Grid.RowSpan="2" />
        <Rectangle Fill="{StaticResource AccentDark}" />
        <StackPanel Margin="10 15 10 10">
            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="25" Height="25">
                    <Path Data="{StaticResource MenuIcon}" Fill="White" />
                </Viewbox>  
            </Button>

            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="25" Height="25">
                    <Path Data="{StaticResource TickIcon}" Fill="White" />
                </Viewbox>
            </Button>

            <Button Style="{StaticResource TaskManagerNavButton}">
                <Viewbox Width="30" Height="30">   
                    <Path Data="{StaticResource TimerIcon}" Fill="White" />
                </Viewbox>
            </Button>
        </StackPanel>

        <!--Task List background-->
        <Rectangle Fill="{StaticResource TaskListBackground}"
                   Grid.Column="1" Grid.RowSpan="2"/>

        <!--Task List grid-->
        <Grid Grid.Column="1" Margin="0,6,0,-6">
        <Grid Grid.Column="1" Opacity="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="38" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
      

            <!--Task Label -->
            <Label Style="{StaticResource Heading1}"  
                   Content="Tasks"
                   VerticalAlignment="Center"
                   Padding="20 0 0 0"
                   IsHitTestVisible="False" />

            <!--Add new task Button-->
            <Button Style="{StaticResource RoundAccentButton}"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"
                    Height="40" 
                    Width="40"
                    Margin="0 0 20 0">
            
                <!--Icon-->
                <Viewbox Width="16"
                         Height="16">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}" ></Path>
                </Viewbox>
            </Button>
            

                <!--Icon-->
                <Viewbox Width="16"
                         Height="16">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}" />
                </Viewbox>
            </Button>
        
            <!---Search Task Bar-->
            <TextBox x:Name="TaskSearhBox"
                     Style="{StaticResource TaskListSearchBox}" 
                     Grid.Column="1"
                     Margin="20 0"/>
                     Margin="20 0" />

            <Label IsHitTestVisible="False" 
                   Content="Searh Task....."
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Margin="40 0 0 0" 
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearhBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                   Visibility="{Binding Text.IsEmpty, ElementName=TaskSearhBox, 
                Converter={StaticResource BooleanToVisibilityConverter}}" />

            <Button Style="{StaticResource SearchButton}"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 30 0"
                    Padding="10"
                    Background="White"
                    BorderBrush="Transparent"
                    Width="30"
                    Height="30">

                <Viewbox Width="16" Height="16">
                    <Path Data="{StaticResource SearchIcon}" Fill="{StaticResource Borders}" />
                </Viewbox>
            </Button>
            <!---List View For Task Items-->
            <ListView Grid.Row="2"
                       Background="Transparent"
                       Margin="0 20">

            </ListView>
        </Grid>
                    
        <!---Tast Viewer-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="230" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="60*" />
            </Grid.RowDefinitions>
            
            <!---Task Details-->
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <TextBlock Text="Task Title" 
                  Style="{StaticResource Title}"
                  VerticalAlignment="Center"   />
                <!---Iportance Bagde-->
                <Border HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Padding="20 5"
                   CornerRadius="5"
                   Background="{StaticResource Importance-crit}">
                <Grid Grid.Row="1"
                      Margin="0 20 0 0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="1" />
                    </Grid.RowDefinitions>
                    <!--List Title-->
                    <TextBlock Style="{StaticResource Title}"
                                   Text="Task Check List"
                               VerticalAlignment="Center"
                               Margin="20 0 0 0" />
                    <!--Check list-->
                    <ListView 
                        BorderBrush="Transparent"
                        BorderThickness="0">

                    </ListView>
                </Grid>

                <TextBlock Text="Task Title" 
                  Style="{StaticResource Title}"
                  VerticalAlignment="Center"   />
                <!---Importance Bagde-->
                <Border HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Padding="20 5"
                   CornerRadius="5"
                   Background="{StaticResource Importance-crit}" Margin="497,0,0,0">
                    <TextBlock Text="Critical"
                      Foreground="Black"    
                      FontWeight="Normal"
                      FontSize="16">
                            

                    </TextBlock>
                </Border>
                <!---Description Scroll-->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <!---Description-->
                    <TextBlock Text="This is a sort description test...."
                               FontSize="16"
                               Foreground="{StaticResource PlaceholderText}"
                               Margin="0 20"/>
                </ScrollViewer>
            </Grid>
        </Grid>
     
                <!---Due Date-->
                <TextBlock Text="Due: 15/05/2024"
                           Background="{StaticResource AccentDark}"
                           Padding="20 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"   
                           Grid.Row="2"
                           Foreground="White"
                           />

            </Grid>
            
            <!---Task View Buttons-->
            <Grid Grid.Row="2">
                <Button Style="{StaticResource TaskViewDeleteButton}"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Content="Delete"
                        Margin="20 0 0 0"/>
                <Button Style="{StaticResource TaskViewEditButton}"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"  
                        Content="Edit"/>
                <Button Style="{StaticResource TaskViewCompleteButton}" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Content="Complete"
                        Margin="0 0 20 0"/>

            </Grid>
        </Grid>


        <!--Task stataus bar-->
        <Rectangle Fill="{StaticResource TaskStatusBackground}" 
                   Grid.Column="1" Grid.RowSpan="2" Margin="0,-8,0,8"/>
        
        <!--Task Status-->
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="230" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="140" />

            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Window>   
