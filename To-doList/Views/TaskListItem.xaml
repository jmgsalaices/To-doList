<UserControl x:Class="To_doList.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:To_doList.Views"
             mc:Ignorable="d" 
             d:DesignHeight="145" d:DesignWidth="435">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
           
        </Grid.RowDefinitions>

        <TextBlock Text="Title"
                   Style="{StaticResource Title}"
                   Margin="20 0"
                   VerticalAlignment="Center" />
        <!---Importance Badge-->
        <Border CornerRadius="3" Background="{StaticResource PlaceholderBorder}" Padding="48 8"
                Height="23"
                HorizontalAlignment="Right"
                Margin="0 0 20 0">
            <TextBlock Text="" Foreground="{StaticResource PlaceholderBorderText}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

        </Border>
        
        <!--Description-->
        <TextBlock Text="Lorem input  sit amet concentur. Lorem input  sit amet concentur. Lorem input  sit amet concentur."
                   TextWrapping="Wrap"
                   Grid.Row="1"
                   Margin="20"  
                   Foreground="{StaticResource TaskListUCTest}">
             
        </TextBlock>

        <TextBlock Text="Due: 23/05/2025"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Margin="20 0"
                   Foreground="{StaticResource TaskListUCTitle}">
                
        </TextBlock>

    </Grid>
</UserControl>
